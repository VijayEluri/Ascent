<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollview"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/namelabel"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/name" />

		<EditText
			android:id="@+id/routename"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:inputType="text" />

		<TextView
			android:id="@+id/gradelabel"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/grade" />

		<Spinner
			android:id="@+id/gradespinner"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:drawSelectorOnTop="true"
			android:prompt="@string/grade" />

		<TextView
			android:id="@+id/craglabel"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/crag" />

		<Spinner
			android:id="@+id/cragspinner"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:drawSelectorOnTop="true"
			android:prompt="@string/crag" />

		<RadioGroup
			android:id="@+id/group"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<RadioButton
				android:id="@+id/addproject"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0"
				android:checked="false"
				android:text="@string/addAsProject" >
			</RadioButton>

			<RadioButton
				android:id="@+id/addascent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0"
				android:checked="true"
				android:text="@string/addAscent" >
			</RadioButton>
		</RadioGroup>

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/dateDisplay"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:gravity="center_vertical"
				android:text=""
				android:textSize="14pt" />

			<Button
				android:id="@+id/pickDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:text="@string/pickDate" />
		</RelativeLayout>

		<Spinner
			android:id="@+id/stylespinner"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:drawSelectorOnTop="true"
			android:prompt="@string/style_prompt" />

		<TextView
			android:id="@+id/attemptlabel"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/attempts" />

		<EditText
			android:id="@+id/attempts"
			android:inputType="number"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>

		<RatingBar
			android:id="@+id/stars"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:numStars="3"
			android:stepSize="1.0" >
		</RatingBar>

		<TextView
			android:id="@+id/commentlabel"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/commentLabel" />

		<EditText
			android:id="@+id/comment"
			android:layout_width="fill_parent"
			android:layout_height="100dip"
			android:inputType="text" />

		<Button
			android:id="@+id/ok"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/add"
			android:textSize="14dp" >
		</Button>
	</LinearLayout>

</ScrollView>